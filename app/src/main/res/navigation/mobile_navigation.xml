<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.moviesdb.view.fragment.HomeFragment"
        android:label="@string/title_home"
        android:launchMode="singleTop"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/navigation_moviedetails" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.moviesdb.view.fragment.FavoriteFragment"
        android:label="@string/title_favorite"
        android:launchMode="singleTop"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_moviedetails"
        android:name="com.example.moviesdb.view.fragment.MovieDetailFragment"
        android:label="@string/title_moviedetail"
        tools:layout="@layout/fragment_movie_detail" >

    </fragment>
</navigation>